{
  "name": "Netflix Social",
  "version": "1.1",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "https://www.netflix.com/*"
  ],
  "web_accessible_resources": [
    "/scripts/netflix-sync.js"
  ],
  "browser_action": {
    "default_popup": "pages/index.html",
    "default_icon": "images/release-icon.png"
  },
  "manifest_version": 2
}

